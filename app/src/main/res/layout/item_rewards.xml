<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <!-- Іконка 1: 7-Workout Week -->
    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="12dp"
            android:src="@drawable/ic_star"
            android:background="@drawable/reward_circle_bg"
            android:scaleType="centerInside"
            android:contentDescription="@string/reward_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reward_star"
            android:textSize="11sp"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Іконка 2: Move Goal 200% -->
    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="12dp"
            android:src="@drawable/ic_goal"
            android:background="@drawable/reward_circle_bg"
            android:scaleType="centerInside"
            android:contentDescription="@string/reward_goal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reward_goal"
            android:textSize="11sp"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Іконка 3: New Move Record -->
    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="12dp"
            android:src="@drawable/ic_record"
            android:background="@drawable/reward_circle_bg"
            android:scaleType="centerInside"
            android:contentDescription="@string/reward_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reward_record"
            android:textSize="11sp"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Іконка 4: Longest Move Streak -->
    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="12dp"
            android:src="@drawable/ic_streak"
            android:background="@drawable/reward_circle_bg"
            android:scaleType="centerInside"
            android:contentDescription="@string/reward_streak" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reward_streak"
            android:textSize="11sp"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

</LinearLayout>
